<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relative_layout_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/advertiser_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/main_image_desc" />

        <TextView
            android:id="@+id/dish_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/advertiser_main_image"
            android:layout_alignStart="@id/advertiser_main_image"
            android:layout_below="@id/advertiser_main_image" >
        </TextView>

        <TextView
            android:id="@+id/dish_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/advertiser_main_image"
            android:layout_alignRight="@id/advertiser_main_image"
            android:layout_below="@id/advertiser_main_image" >
        </TextView>

        <TextView
            android:id="@+id/dish_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dish_name_tv"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/advertiser_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dish_description_tv"
            android:layout_centerHorizontal="true"
            android:text="@string/temp_string" >
        </TextView>

        <TextView
            android:id="@+id/advertiser_detailed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advertiser_name_tv"
            android:layout_centerHorizontal="true"
            android:text="@string/temp_string" />

        <TextView
            android:id="@+id/advertiser_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advertiser_detailed_info"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/advertiser_postcode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advertiser_address_tv"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:id="@+id/fav_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advertiser_postcode_tv"
            android:layout_centerHorizontal="true"
            android:textOff="@string/no_favs"
            android:textOn="@string/on_favs" />
    </RelativeLayout>

</ScrollView>